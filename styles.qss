QPushButton#destructiveButton {
  background-color: red; 
  color: white; 
  border-radius: 5px; 
  padding-top: 1px; 
  padding-bottom: 3px; 
  padding-left: 12px; 
  padding-right: 12px; 
  margin-bottom: 1px;
} 
QPushButton#destructiveButton:pressed {
  background-color: darkRed; 
  color: grey;
}
QPushButton#destructiveButton:disabled {
  background-color: darkred; 
  color: grey; 
}